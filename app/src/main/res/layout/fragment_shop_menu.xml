<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.ShopMenuFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewShopMenuTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:gravity="center_horizontal"
        tools:text="Order from Awesome Shop"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Guideline: The BOTTOM of the Checkout Button will align near this line.
         It's positioned from the screen bottom. -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_checkout_button_bottom_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="50dp" /> <!-- Adjust this: Space from screen bottom to where checkout button's bottom will be -->

    <!-- Checkout Button - Constrained by the Guideline from the bottom -->
    <Button
        android:id="@+id/buttonCheckout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Checkout ($0.00)"
        android:text="Checkout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_checkout_button_bottom_anchor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LinearLayout for Cart Details - Sits ON TOP of the Checkout Button -->
    <LinearLayout
        android:id="@+id/linearLayoutCartDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
    app:layout_constraintBottom_toTopOf="@id/buttonCheckout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- RelativeLayouts for Subtotal, Delivery Fee, Total -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewSubtotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/textViewCartSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$0.00"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">
        <TextView
            android:id="@+id/textViewDeliveryFeeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Fee:"
            android:textAppearance="?attr/textAppearanceBody1"/>
        <TextView
            android:id="@+id/textViewDeliveryFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$3.00"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/textViewTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"/>
        <TextView
            android:id="@+id/textViewCartTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$3.00"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>

    <!-- Cart Divider - Sits ON TOP of the LinearLayout Cart Details -->
<View
android:id="@+id/viewCartDivider"
android:layout_width="0dp"
android:layout_height="1dp"
android:background="?android:attr/listDivider"
app:layout_constraintBottom_toTopOf="@id/linearLayoutCartDetails"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Menu Items List - Fills space above the Cart Divider -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewMenuItems"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_marginTop="8dp"
android:paddingBottom="8dp"
app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
app:layout_constraintTop_toBottomOf="@id/textViewShopMenuTitle"
app:layout_constraintBottom_toTopOf="@id/viewCartDivider"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:listitem="@layout/item_menu_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>