<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.dashboard.ShopMenuFragment">

    <!-- Title -->
<TextView
android:id="@+id/textViewShopMenuTitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:textAppearance="?attr/textAppearanceHeadline5"
android:gravity="center_horizontal"
tools:text="Order from Awesome Shop"
android:paddingTop="16dp"
android:paddingBottom="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Guideline for Checkout Button (No change needed here for aesthetics) -->
<androidx.constraintlayout.widget.Guideline
android:id="@+id/guideline_checkout_button_bottom_anchor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
app:layout_constraintGuide_end="50dp" />

    <!-- Checkout Button -->
<Button
android:id="@+id/buttonCheckout"
android:layout_width="0dp"
android:layout_height="wrap_content"
tools:text="Checkout ($0.00)"
android:text="Checkout"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintBottom_toBottomOf="@id/guideline_checkout_button_bottom_anchor"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LinearLayout for Cart Details -->
<LinearLayout
android:id="@+id/linearLayoutCartDetails"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/shape_cart_summary_background"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="4dp"
    app:layout_constraintBottom_toTopOf="@id/buttonCheckout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="8dp" >


<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:id="@+id/textViewSubtotalLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Subtotal:"
    android:textAppearance="?attr/textAppearanceBody2" /> <!-- Slightly smaller/less prominent -->
<TextView
    android:id="@+id/textViewCartSubtotal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="$0.00"
    android:textAppearance="?attr/textAppearanceBody1"
    android:textStyle="bold"
    android:layout_alignParentEnd="true"/>
</RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"> <!-- Increased spacing -->
<TextView
    android:id="@+id/textViewDeliveryFeeLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delivery Fee:"
    android:textAppearance="?attr/textAppearanceBody2" /> <!-- Slightly smaller/less prominent -->
<TextView
    android:id="@+id/textViewDeliveryFee"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="$3.00"
    android:textAppearance="?attr/textAppearanceBody1"
    android:textStyle="bold"
    android:layout_alignParentEnd="true"/>
</RelativeLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="?android:attr/listDivider"
android:layout_marginTop="12dp"
android:layout_marginBottom="12dp"/>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content">
<!-- android:layout_marginTop="8dp" removed, using divider above -->
<TextView
    android:id="@+id/textViewTotalLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Total:"
    android:textStyle="bold"
    android:textAppearance="?attr/textAppearanceHeadline6"/>
<TextView
    android:id="@+id/textViewCartTotal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="$3.00"
    android:textStyle="bold"
    android:textAppearance="?attr/textAppearanceHeadline6"
    android:textColor="?attr/colorPrimary"
android:layout_alignParentEnd="true"/>
</RelativeLayout>
    </LinearLayout>

    <!-- Cart Divider - Sits ON TOP of the LinearLayout Cart Details -->
    <!-- This might be redundant if linearLayoutCartDetails has its own top border or distinct background -->
    <!-- Or if you want a line explicitly between the RecyclerView and the cart summary -->
<View
android:id="@+id/viewCartDivider"
android:layout_width="0dp"
android:layout_height="1dp"
android:background="?attr/colorPrimaryVariant"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintBottom_toTopOf="@id/linearLayoutCartDetails"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Menu Items List -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recyclerViewMenuItems"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_marginTop="8dp"
android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:clipToPadding="false"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintTop_toBottomOf="@id/textViewShopMenuTitle"
    app:layout_constraintBottom_toTopOf="@id/viewCartDivider"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:listitem="@layout/item_menu_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>