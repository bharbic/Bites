<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Optional: ImageView for the item's image
    <ImageView
        android:id="@+id/imageViewCartItem"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />   -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            tools:text="Delicious Burger" />

        <TextView
            android:id="@+id/textViewCartItemPriceAndQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="$9.99 x 2" /> <!-- Example: Price per unit x Quantity -->

    </LinearLayout>

    <TextView
        android:id="@+id/textViewCartItemTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        tools:text="$19.98" /> <!-- Total price for this line item -->

    <!--
    Optional: Space for +/- buttons or a remove button
    <ImageButton
        android:id="@+id/buttonRemoveItemFromCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_circle_outline"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove item"
        android:layout_marginStart="8dp"/>
    -->

</LinearLayout>