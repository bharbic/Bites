<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="24dp">

    <!-- For now, we'll just use a placeholder icon. You can add an ImageView later -->
    <ImageView
        android:id="@+id/imageViewShopIconPlaceholder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_gallery" /> <!-- System placeholder -->

    <TextView
        android:id="@+id/textViewShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop Name Placeholder"
        android:textSize="18sp" />
</LinearLayout>